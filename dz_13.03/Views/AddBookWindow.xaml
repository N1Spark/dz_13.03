<Window x:Class="dz_13._03.Views.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dz_13._03.Views"
        mc:Ignorable="d"
        Title="Добавить Книгу" Height="112" Width="242">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox Text="{Binding BookName, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Width="200" Height="30"/>
        <Button Margin="0,10,0,15" Command="{Binding AddBook}" Content="Добавить книгу" Grid.Row="1" Width="200" Height="30"/>
    </Grid>
</Window>
